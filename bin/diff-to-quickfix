#!/usr/bin/env sh
# Convert a diff into Vim's quickfix format
#
# Usage:
#   vi -q $(git diff -p -U0 --diff-filter=AM -r HEAD~5.. | diff-to-quickfix)
#   vi -q $(diff -U0 a b | diff-to-quickfix)

exec awk '
/^diff/ {
    in_hunk=0
}
/^\+\+\+ / {
    fname=substr($2, 2)
}

/^@@ / {
    in_hunk=1
    nr=substr($3, 2)
    sub(/,.*/, "", nr)
    printf(".%s:%s:%s\n", fname, nr, $0)
    next
}

in_hunk {
    printf("%s\n", $0)
}
'
